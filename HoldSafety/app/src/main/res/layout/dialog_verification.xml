<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:maxHeight="400dp"
    android:maxWidth="450dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:paddingVertical="40dp">

        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/holdsafety_default" />

        <TextView
            android:id="@+id/lblVerifyEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgLogo"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="5dp"
            android:fontFamily="sans-serif-black"
            android:text="Email Verification"
            android:textColor="@color/dark_blue"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/lblVerifyDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblVerifyEmail"
            android:layout_marginHorizontal="20dp"
            android:fontFamily="sans-serif"
            android:text="One-Time Password (OTP) has been sent to your email."
            android:textColor="@color/gray"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/txtCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblVerifyDesc"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="25dp"
            android:ems="10"
            android:fontFamily="sans-serif"
            android:hint="Enter Verification Code"
            android:inputType="number"
            android:maxLength="6"
            android:maxLines="1"
            android:textColor="@color/dark_blue" />


        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_below="@+id/txtCode"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="36dp"
            android:background="@drawable/blue_button"
            android:fontFamily="sans-serif-black"
            android:padding="10dp"
            android:text="Submit"
            android:textColor="@color/dark_blue"
            android:textSize="20sp" />

        <!--        HI PAAYOS ULE SALAMAT TEAM LIDER    -->
        <TextView
            android:id="@+id/txtTimeRemaining"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnSubmit"
            android:layout_centerHorizontal="true"
            android:text="Resend in x seconds"
            android:layout_marginTop="5dp"/>


    </RelativeLayout>



</RelativeLayout>